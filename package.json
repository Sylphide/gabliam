{
  "name": "gabliam-sources",
  "version": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "bootstrap": "yarn run build",
    "changelog": "conventional-changelog -i  CHANGELOG.md -s",
    "lint": "tslint --type-check --project tsconfig.json \"./{packages,examples}/**/src/**/*.ts\" --exclude \"./{packages,examples}/**/node_modules/**/*.ts\" --exclude \"./{packages,examples}/**/src/**/*.d.ts\"",
    "build": "lerna run build",
    "test": "jest --runInBand",
    "test:ci": "jest --runInBand --coverage && yarn run coverage",
    "coverage": "node remap_coverage.js && rimraf coverage_jest_raw && codecov",
    "release": "yarn run build && yarn run lint && yarn run test && lerna publish",
    "prettier": "prettier --single-quote --write --parser typescript \"./{packages,examples}/**/src/**/*.ts\"",
    "example:graphql": "lerna run --scope graphql-sample start",
    "example:mongo": "lerna run --scope mongo-sample start",
    "example:typeorm": "lerna run --scope typeorm-sample start",
    "example:express:passport": "lerna run --scope express-passport-sample start"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/mock-fs": "^3.6.30",
    "@types/reflect-metadata": "^0.0.5",
    "@types/sinon": "^2.3.5",
    "@types/supertest": "^2.0.3",
    "codecov": "^2.3.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.4",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-serializer-path": "^0.1.3",
    "jest-serializer-supertest": "^1.3.0",
    "lerna": "^2.2.0",
    "lint-staged": "^4.2.3",
    "mock-fs": "^4.4.1",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.4",
    "publish-please": "^2.3.1",
    "reflect-metadata": "^0.1.10",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.2",
    "sinon": "^4.0.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.5.3",
    "vrsource-tslint-rules": "^5.1.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote --write",
      "tslint --type-check --project tsconfig.json",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "packages/**/src/**/*.{ts}",
      "!packages/**/src/interfaces/**",
      "!packages/**/src/testing/**",
      "!packages/**/src/typings/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "coverage_jest_raw",
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setup.js",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*)\\.test\\.(ts|tsx|js)$",
    "snapshotSerializers": [
      "jest-serializer-path",
      "jest-serializer-supertest"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
